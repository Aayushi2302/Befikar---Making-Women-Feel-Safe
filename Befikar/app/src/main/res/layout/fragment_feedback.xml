<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appBar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Feedback"
        app:navigationIcon="@drawable/back"
        style="@style/Widget.MaterialComponents.Toolbar.Primary" />
    </com.google.android.material.appbar.AppBarLayout>


    <EditText
        android:id="@+id/feedbackEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:hint="Enter your Email Id"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout1" />


    <EditText
        android:id="@+id/feedbackData"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:minHeight="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Write your Feedback here"
        android:padding="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:textColorHint="@color/grey"
        android:gravity="top"
        android:maxLength="400"
        app:layout_constraintTop_toBottomOf="@id/feedbackEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:inputType="textMultiLine|textCapSentences"/>


    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/feedbackData"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/red"
        android:text="Send"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/source_sans_pro_semibold"/>

</androidx.constraintlayout.widget.ConstraintLayout>